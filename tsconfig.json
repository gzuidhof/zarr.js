{
  "compilerOptions": {
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "es6",
    "module": "es2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "test"
  ]
}